#!shell (just so 'file' says the right thing)

# Safe find - ignore directories which logically should not be there.
function Find
{
    typeset dir=$1; shift
    case "$@" in
	*-print*|*-exec*|*-ok*|*-ls*|*-fls*|*-delete*|*-fprint*|*-prune*|*-quit*) ;;
	*) set -- "$@" -print
    esac
    find "$dir" \( \( -name .svn -o -name .CVS\* -o -name .git\* -o -name .snapshot \) -prune \) -o "$@"
}
